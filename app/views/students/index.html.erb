 

 <%= form_tag(students_path, method: :get) do %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Search', name: nil, :class => 'btn btn-info ' %>
<% end %>


<h1>Listing Student</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>profile_pic:</th>
        <th>Name:</th>
        <th>father_name:</th>
        <th>contact:</th>
        <th>emergency_contact:</th>
        <th>email:
        </th>
        <th>address:</th>
        <th>college:</th>
        <th>date_of_birth:</th>
        <th>gender:</th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= image_tag student.profile_pic, class: "img-responsive" %></td>
          <td><%= student.name %></td>
          <td><%= student.father_name %></td>
          <td><%= student.contact %></td>
          <td><%= student.emergency_contact %></td>
          <td><%= student.email %></td>
          <td><%= student.address %></td>
          <td><%= student.college %></td>
          <td><%= student.date_of_birth %></td>
          <td><%= student.gender %></td>

          <td><%= link_to 'Show', student_path(student), :class => 'btn btn-success ' %></td>

          <td><%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-info ' %></td>

          <td><%= link_to 'Destroy', student_path(student),
            method: :delete,
            data: { confirm: 'are you sure'}, :class => 'btn btn-danger ' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New student', new_student_path, :class => 'btn btn-primary '%>